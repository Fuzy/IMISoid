<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <!--Dummy layout for implicit focus-->
    <LinearLayout
            android:focusable="true" android:focusableInTouchMode="true"
            android:layout_width="0px" android:layout_height="0px"/>

    <!-- <LinearLayout android:layout_height="wrap_content"
                   android:layout_width="match_parent"
                   android:orientation="horizontal">-->


    <EditText
            android:id="@+id/dateFromEdit"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="10dip"
            android:scrollHorizontally="true"
            android:capitalize="none"
            android:autoText="false" android:text=""/>

    <EditText
            android:id="@+id/dateToEdit"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="10dip"
            android:scrollHorizontally="true"
            android:capitalize="none"
            android:autoText="false" android:text=""/>

    <ImageButton
            android:id="@+id/dateDayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_day"/>

    <ImageButton
            android:id="@+id/dateTodayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_today"/>

    <ImageButton
            android:id="@+id/dateMonthButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_month"/>

